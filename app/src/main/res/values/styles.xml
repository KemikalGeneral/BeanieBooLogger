<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_item_detail">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">@dimen/margin_padding_4</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="dialogue_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red</item>    //Header colour
        <item name="colorControlActivated">@color/red</item>    //Item background
        <item name="android:textColorPrimary">@color/black</item>   //Text colour
        <item name="android:windowBackground">@drawable/dialogue_style</item>
    </style>

</resources>
